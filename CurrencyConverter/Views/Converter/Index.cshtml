@model Currency

<div class="container mt-5">
    <form asp-action="Convert" asp-controller="Converter" method="post" class="shadow p-4 mb-5 bg-white rounded">
        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Amount" class="font-weight-bold"><strong>Enter Amount</strong></label>
            <input asp-for="Amount" class="form-control" placeholder="Enter amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <label><strong>From Currency</strong></label>
            <select asp-for="FromCurrency" class="form-control">
                <option value="USD">USD - US Dollar</option>
                <option value="EUR">EUR - Euro</option>
                <option value="GBP">GBP - British Pound</option>
                <option value="JPY">JPY - Japanese Yen</option>
            </select>
        </div>

        <br />

        <div class="form-group">
            <label><strong>To Currency</strong></label>
            <select asp-for="ToCurrency" class="form-control">
                <option value="USD">USD - US Dollar</option>
                <option value="EUR">EUR - Euro</option>
                <option value="GBP">GBP - British Pound</option>
                <option value="JPY">JPY - Japanese Yen</option>
            </select>
        </div>

        <br />

        <div class="text-center">
            <input type="submit" value="Convert" class="btn btn-primary btn-lg" style="background-color: #007bff; color: white; width: 100%;" />
        </div>
    </form>
</div>


